# AI-Powered Facultative Reinsurance Decision Support System
# Environment Variables Configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Cloudinary Configuration (for file storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# LlamaParse Configuration (for document processing)
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key

# Redis Configuration (for Celery message broker)
REDIS_URL=redis://localhost:6379/0

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=2

# Development Configuration
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.msg,.pdf,.docx,.doc,.xlsx,.xls,.png,.jpg,.jpeg
